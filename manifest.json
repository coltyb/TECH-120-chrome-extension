{
  "name": "EarthKind",
  "version": "1.0",
  "description": "An extension that helps promote environmentally-friendly products",
  "manifest_version": 3,

  "action": {
    "default_title": "GreenShop",
    "default_icon": {
      "32": "icons/earthkind-32.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.example.com/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ]
}
