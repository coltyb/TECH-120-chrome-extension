{
  "name": "EarthKind",
  "version": "1.0",
  "description": "An extension that helps promote environmentally-friendly products",
  "manifest_version": 2,
  "icons": {
    "16": "icons/earthkind-16.png",
    "32": "icons/earthkind-32.png",
    "48": "icons/earthkind-48.png",
    "128": "icons/earthkind-128.png"
  },
  "browser_action": {
    "default_title": "EarthKind",
    "default_icon": "icons/earthkind-32.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://www.example.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.example.com/*"
      ],
      "js": [
        "popup.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ]
}
